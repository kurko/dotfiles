[alias]
  #
  # Level 1
  #
  a = "!git add $* && git status # "
  c = commit
  ch = checkout
  br = branch
  d = diff
  dc = diff --cached
  d-stat = diff --stat=160,120
  d-head1 = diff HEAD~1
  dm = diff master
  dm-short = diff master --shortstat
  f = fetch --all
  l = "!source ~/.githelpers && git_log_simpler_titles"
  p = push
  s = status

  #
  # Level 2
  #
  mp = !git checkout master && git pull --rebase origin master
  ch-prev = checkout @{-1}
  pr-rebase = "!git fetch && git rebase origin/master && git push --force #"
  amend = commit --amend

  # branches
  reset-branch-from-origin = "!source ~/.githelpers && reset_from_github"

  # logs
  l-oneline-all = log --graph --decorate --pretty=oneline --abbrev-commit --all
  l-oneline = log --graph --decorate --pretty=oneline --abbrev-commit
  l-titles = log --pretty=format:%s

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached

  # Fancy logging.
  l-graph = log --graph --pretty=format:'%h -%d %s %n' --abbrev-commit --date=relative --branches

[user]
	name = Alex Oliveira
	email = kurko@users.noreply.github.com

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[color "status"]
  added = green
  changed = red
  untracked = white
[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red
  #new = green

[gc]
  auto = 1

[core]
	editor = vim

[merge]
  tool = vimdiff
[github]
	user = kurko
[push]
	default = simple
[ghi]
	token = !security find-internet-password -a kurko -s github.com -l 'ghi token' -w

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[web]
	browser = open
[commit]
  template = ~/.gitmessage
	verbose = true
[log]
	date = iso
